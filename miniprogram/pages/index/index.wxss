/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.user-banner{
  height: 250rpx;
  width: 100%;
  background-color: #12b195;
  padding: 10rpx 50rpx;
  display: flex;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
}

.user-container{
  display: flex;
  align-items: center;
}

.avatar{
  width: 100rpx;
  height: 100rpx;
  border: 1px solid rgba(0, 0, 0, 0);
  border-radius: 50%;
}

.user-name{
  padding-left: 20rpx;
  color: #fff;
}

.steps-number{
  color: sandybrown;
  font-size: 20px;
  font-weight: 600;
  padding-right: 20rpx;
}

.step-font{
  color: #eee;
  font-size: 20px;
}
.step-count-container{
  position: relative;
}
.step-advise{
  position: absolute;
  width: 100%;
  text-align: center;
  line-height: 1;
  top: 130%;
  left: 0;
  color: #ccc;
  font-size: 15px;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #fff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.my-record {
  width: 100%;
  box-sizing: border-box;
  border-left: 5rpx solid #007aff;
  padding: 0 40rpx;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 3rpx 30rpx #999;
}
.not-login-warm{
  width: 100%;
  margin-top: 200rpx;
  font-size: 30rpx;
  color: #999;
  text-align: center;
  letter-spacing: 2rpx;
}
.main{
  width: 100%;
}
.record-item {
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 20rpx;
  margin-top: 30rpx;
  background-color: #fff;
}
.record-content-box {
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}
.record-image-box{
  width: 100%;
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  flex-wrap: wrap;
}
.record-content{
  width: 100%;
  line-height: 1.6;
  font-size: 30rpx;
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre-wrap;
}
.record-image-item:not(:nth-of-type(3n+3)){
  margin-right: 3rpx;
}
.record-image-item{
  width: 32%;
  height: 150rpx;
}
.record-utils{
  width: 100%;
  border-top: 2rpx solid #eee;
  display: flex;
  color: #999;
  line-height: 2;
  font-size: 30rpx;
  justify-content: space-between;
}
.delete-record{
 color: #74a2d4;
}